@{
    ViewData["Title"] = "Dashboard Nhân viên";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4 text-center" style="width: 480px; border-radius: 12px;">
        <h3 class="fw-bold text-success mb-3">
            <i class="bi bi-person-badge-fill"></i> Bảng điều khiển Nhân viên
        </h3>
        <p class="text-secondary">Xin chào, <strong>@Context.Session.GetString("HoTen")</strong>!</p>
        <p class="mt-2">Bạn có thể xem danh sách sản phẩm, xử lý đơn hàng và hỗ trợ khách hàng.</p>

        <a href="/Home/Index" class="btn btn-outline-success mt-3 w-100">
            <i class="bi bi-house"></i> Về trang chủ
        </a>
        <a href="/Account/Logout" class="btn btn-danger mt-2 w-100">
            <i class="bi bi-box-arrow-right"></i> Đăng xuất
        </a>
    </div>
</div>