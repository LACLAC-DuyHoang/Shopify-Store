@model IEnumerable<SHOPIFY1.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-gear"></i> Quản lý Sản phẩm</h2>
<p class="text-secondary">Tổng quan về tất cả sản phẩm, bao gồm tồn kho, giá và danh mục.</p>

<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
    </a>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        ← Về Dashboard
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên Sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Trạng thái</th>
                <th>Ngày cập nhật</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.MaSp</td>
                    <td>
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="~/images/@item.HinhAnh" alt="@item.TenSp" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px; margin-right: 10px;" />
                            }
                            <span>@item.TenSp</span>
                        </div>
                    </td>
                    <td>@item.MaDmNavigation?.TenDm</td>
                    <td>@string.Format("{0:N0} ₫", item.Gia)</td>
                    <td>
                        <span class="badge @(item.SoLuongTon > 10 ? "bg-success" : (item.SoLuongTon > 0 ? "bg-warning text-dark" : "bg-danger"))">
                            @item.SoLuongTon
                        </span>
                    </td>
                    <td>
                        <span class="badge @(item.TrangThai == true ? "bg-success" : "bg-danger")">
                            @(item.TrangThai == true ? "Hoạt động" : "Ngừng bán")
                        </span>
                    </td>
                    <td>@item.NgayCapNhat?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@item.MaSp" class="btn btn-sm btn-info text-white me-2" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <form asp-action="DeleteProduct" asp-route-id="@item.MaSp" method="post" class="d-inline"
                              onsubmit="return confirm('Bạn có chắc chắn muốn vô hiệu hóa sản phẩm này không?');">
                            <input type="hidden" asp-for="@item.MaSp" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Vô hiệu hóa">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Thêm thư viện DataTables (tùy chọn) nếu cần quản lý nhiều dữ liệu
        // Ví dụ: $('#productTable').DataTable();
    </script>
}