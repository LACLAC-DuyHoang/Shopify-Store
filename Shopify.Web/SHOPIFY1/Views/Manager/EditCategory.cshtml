@model SHOPIFY1.Models.DanhMuc

@{
    ViewData["Title"] = $"Sửa Danh mục: {Model.TenDm}";
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-pencil-square"></i> Sửa Danh mục</h2>

<div class="card shadow-sm p-4" style="max-width: 600px;">
    <form asp-action="EditCategory" asp-route-id="@Model.MaDm" method="post">

        <input type="hidden" asp-for="MaDm" />
        <input type="hidden" asp-for="NgayTao" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="TenDm" class="form-label fw-semibold">Tên Danh mục</label>
            <input asp-for="TenDm" class="form-control" required />
            <span asp-validation-for="TenDm" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MoTa" class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="mt-4 border-top pt-3">
            <button type="submit" class="btn btn-warning me-2 text-white fw-bold"><i class="bi bi-arrow-clockwise"></i> Cập nhật Danh mục</button>
            <a asp-action="Categories" class="btn btn-outline-secondary">Hủy bỏ</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}