@model IEnumerable<SHOPIFY1.Models.TaiKhoan>

@{
    ViewData["Title"] = "Quản lý Nhân viên/Shipper";
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-person-badge"></i> Quản lý Nhân viên/Shipper</h2>
<p class="text-secondary">Xem, sửa và quản lý vai trò của các tài khoản nội bộ (Manager, Employee, Shipper).</p>

<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="CreateStaff" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Thêm Tài khoản Nội bộ
    </a>
    <a asp-controller="Manager" asp-action="Dashboard" class="btn btn-outline-secondary">
        ← Về Dashboard
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var roleClass = item.MaVaiTro switch
                {
                    2 => "bg-primary",
                    3 => "bg-info",
                    4 => "bg-warning text-dark",
                    _ => "bg-secondary"
                };

                <tr>
                    <td class="fw-bold">@item.MaTk</td>
                    <td>@item.HoTen</td>
                    <td>@item.Email</td>
                    <td>
                        <span class="badge @roleClass">
                            @item.MaVaiTroNavigation?.TenVaiTro
                        </span>
                    </td>
                    <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(item.TrangThai == true ? "bg-success" : "bg-danger")">
                            @(item.TrangThai == true ? "Hoạt động" : "Vô hiệu hóa")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaTk" class="btn btn-sm btn-info text-white me-2" title="Sửa thông tin & Vai trò">
                            <i class="bi bi-pencil"></i>
                        </a>

                        @if (item.TrangThai == true)
                        {
                            <form asp-action="ChangeStatus" method="post" class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn VÔ HIỆU HÓA tài khoản @item.HoTen không?');">
                                <input type="hidden" name="id" value="@item.MaTk" />
                                <input type="hidden" name="status" value="False" />
                                <button type="submit" class="btn btn-sm btn-danger" title="Vô hiệu hóa">
                                    <i class="bi bi-person-slash"></i>
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ChangeStatus" method="post" class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn KÍCH HOẠT tài khoản @item.HoTen không?');">
                                <input type="hidden" name="id" value="@item.MaTk" />
                                <input type="hidden" name="status" value="True" />
                                <button type="submit" class="btn btn-sm btn-success" title="Kích hoạt">
                                    <i class="bi bi-person-check"></i>
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>