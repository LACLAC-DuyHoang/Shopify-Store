@model SanPham
@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "_LayoutAdmin";
}

<h3>Thêm sản phẩm mới</h3>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Tên sản phẩm</label>
        <input asp-for="TenSp" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Giá</label>
        <input asp-for="Gia" type="number" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Số lượng tồn</label>
        <input asp-for="SoLuongTon" type="number" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Danh mục</label>
        <select asp-for="MaDm" class="form-select" asp-items="@(new SelectList(ViewBag.DanhMucs, "MaDm", "TenDm"))"></select>
    </div>
    <div class="mb-3">
        <label>Hình ảnh</label>
        <input type="file" name="hinhAnh" class="form-control" accept="image/*" required />
    </div>
    <div class="mb-3">
        <label>Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Products" class="btn btn-secondary">Hủy</a>
</form>