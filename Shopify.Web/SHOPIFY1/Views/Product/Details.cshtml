@model SHOPIFY1.Models.SanPham


@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("ByCategory", "Product", new { id = Model.MaDm })">
                    @Model.MaDmNavigation?.TenDm
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TenSp</li>
        </ol>
    </nav>

    <div class="row mt-4">
        <div class="col-md-5">
            <img src="@Model.HinhAnh" alt="@Model.TenSp" class="img-fluid rounded shadow-sm w-100">
        </div>
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.TenSp</h2>
            <p class="text-muted">Hãng sản xuất: <b>@Model.HangSx</b></p>
            <p><b>Giá bán:</b> <span class="text-danger fs-5 fw-semibold">@string.Format("{0:N0} ₫", Model.Gia)</span></p>
            <p><b>Số lượng tồn:</b> @Model.SoLuongTon</p>
            <p><b>Mô tả:</b> @Model.MoTa</p>

            <div class="mt-4">
                <a href="@Url.Action("ByCategory", "Product", new { id = Model.MaDm })"
                   class="btn btn-outline-primary me-2">
                    ← Quay lại danh mục
                </a>

                @if (Model.TrangThai == true && Model.SoLuongTon > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.MaSp" method="get" class="d-inline-flex align-items-center">
                        <div class="input-group me-2" style="width: 150px;">
                            <span class="input-group-text">SL</span>
                            <input type="number" name="soLuong" value="1" min="1" max="@Model.SoLuongTon" class="form-control text-center" style="max-width: 70px;" required />
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-danger" disabled>
                        <i class="bi bi-x-circle"></i> Hết hàng hoặc Ngừng bán
                    </button>
                }
            </div>
        </div>
    </div>
</div>