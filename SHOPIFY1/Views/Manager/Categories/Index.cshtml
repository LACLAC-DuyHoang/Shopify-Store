@model IEnumerable<SHOPIFY1.Models.DanhMuc>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-tags"></i> Quản lý Danh mục</h2>
<p class="text-secondary">Thêm, sửa và xóa các danh mục sản phẩm.</p>

<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="CreateCategory" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm Danh mục mới
    </a>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        ← Về Dashboard
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Mã DM</th>
                <th>Tên Danh mục</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.MaDm</td>
                    <td>@item.TenDm</td>
                    <td>@item.MoTa</td>
                    <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@item.MaDm" class="btn btn-sm btn-info text-white me-2" title="Sửa">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>

                        <form asp-action="DeleteCategory" asp-route-id="@item.MaDm" method="post" class="d-inline"
                              onsubmit="return confirm('CẢNH BÁO: Xóa danh mục sẽ xóa vĩnh viễn.
Bạn có chắc chắn muốn xóa danh mục này không?
Nếu có sản phẩm, thao tác sẽ thất bại.');">
                            <input type="hidden" asp-for="@item.MaDm" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a asp-action="Products" class="btn btn-outline-primary">Quản lý Sản phẩm</a>
</div>