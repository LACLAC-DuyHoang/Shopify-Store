@model SHOPIFY1.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm Danh mục mới";
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-tags"></i> Thêm Danh mục mới</h2>

<div class="card shadow-sm p-4" style="max-width: 600px;">
    <form asp-action="CreateCategory" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="TenDm" class="form-label fw-semibold">Tên Danh mục</label>
            <input asp-for="TenDm" class="form-control" placeholder="Ví dụ: Điện thoại, Thiết bị gia dụng" required />
            <span asp-validation-for="TenDm" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MoTa" class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Mô tả ngắn về danh mục này"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="mt-4 border-top pt-3">
            <button type="submit" class="btn btn-primary me-2"><i class="bi bi-save"></i> Thêm Danh mục</button>
            <a asp-action="Categories" class="btn btn-outline-secondary">Hủy bỏ</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}