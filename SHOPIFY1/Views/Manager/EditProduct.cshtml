@model SHOPIFY1.Models.SanPham

@{
    ViewData["Title"] = $"Sửa Sản phẩm: {Model.TenSp}";
    // Lấy danh sách Danh mục từ ViewBag để tạo dropdown
    var categories = ViewBag.Categories as List<SHOPIFY1.Models.DanhMuc>;
}

<h2 class="fw-bold mb-4 text-primary"><i class="bi bi-pencil-square"></i> Sửa Sản phẩm</h2>
<p class="text-secondary">Cập nhật thông tin chi tiết cho sản phẩm **@Model.TenSp**.</p>

<div class="card shadow-sm p-4">
    <form asp-action="EditProduct" asp-route-id="@Model.MaSp" method="post">

        <input type="hidden" asp-for="MaSp" />
        <input type="hidden" asp-for="NgayTao" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="TenSp" class="form-label fw-semibold">Tên Sản phẩm</label>
                    <input asp-for="TenSp" class="form-control" required />
                    <span asp-validation-for="TenSp" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HangSx" class="form-label fw-semibold">Hãng sản xuất</label>
                    <input asp-for="HangSx" class="form-control" />
                    <span asp-validation-for="HangSx" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gia" class="form-label fw-semibold">Giá bán (VNĐ)</label>
                    <input asp-for="Gia" type="number" step="0.01" class="form-control" required />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoLuongTon" class="form-label fw-semibold">Số lượng tồn kho</label>
                    <input asp-for="SoLuongTon" type="number" class="form-control" required />
                    <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="MaDm" class="form-label fw-semibold">Danh mục</label>
                    <select asp-for="MaDm" class="form-select" required>
                        <option value="">-- Chọn Danh mục --</option>
                        @if (categories != null)
                        {
                            @foreach (var cat in categories)
                            {
                                <option value="@cat.MaDm" selected="@(cat.MaDm == Model.MaDm)">
                                    @cat.TenDm
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="MaDm" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HinhAnh" class="form-label fw-semibold">Đường dẫn Hình ảnh</label>
                    <input asp-for="HinhAnh" class="form-control" placeholder="Ví dụ: /images/sanpham.jpg" />
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>

                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/images/@Model.HinhAnh" alt="Hình ảnh sản phẩm hiện tại" style="max-width: 100px; max-height: 100px; object-fit: cover; margin-top: 10px; border: 1px solid #ccc;" />
                    }
                </div>

                <div class="mb-3 form-check mt-4">
                    <input asp-for="TrangThai" class="form-check-input" />

                    <label asp-for="TrangThai" class="form-check-label fw-semibold">Hoạt động (Có bán)</label>
                    <small class="form-text text-muted d-block">Bỏ chọn để tạm ngừng bán sản phẩm này.</small>
                </div>
            </div>

            <div class="col-12">
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold">Mô tả sản phẩm</label>
                    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mt-4 border-top pt-3">
            <button type="submit" class="btn btn-warning me-2 text-white fw-bold"><i class="bi bi-arrow-clockwise"></i> Cập nhật Sản phẩm</button>
            <a asp-action="Products" class="btn btn-outline-secondary">Hủy bỏ</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}