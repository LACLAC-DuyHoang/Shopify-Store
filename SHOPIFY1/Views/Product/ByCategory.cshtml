@model List<SHOPIFY1.Models.SanPham>

@{
    ViewData["Title"] = "Sản phẩm";
    var categories = ViewBag.Categories as List<SHOPIFY1.Models.DanhMuc>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var search = ViewBag.Search as string;
}

<div class="row mt-4">
    <div class="col-md-3">
        <h5>Danh mục</h5>
        <ul class="list-group mb-3">
            <li class="list-group-item @(selectedCategoryId == null ? "active" : "")">
                <a asp-action="ByCategory" class="text-decoration-none">Tất cả</a>
            </li>
            @foreach (var cat in categories)
            {
                <li class="list-group-item @(cat.MaDm == selectedCategoryId ? "active" : "")">
                    <a asp-action="ByCategory"
                       asp-route-id="@cat.MaDm"
                       asp-route-priceRange="@ViewBag.SelectedPriceRange"
                       asp-route-search="@search"
                       class="text-decoration-none">
                        @cat.TenDm
                    </a>
                </li>
            }
        </ul>

        <h5>Lọc theo giá</h5>
        <ul class="list-group">
            @{
                var prices = new[] { ("Tất cả", ""), ("Dưới 10 triệu", "0-10"), ("10 - 20 triệu", "10-20"), ("20 - 30 triệu", "20-30"), ("Trên 30 triệu", "30+") };
            }
            @foreach (var (label, value) in prices)
            {
                <li class="list-group-item @(ViewBag.SelectedPriceRange == value ? "active" : "")">
                    <a asp-action="ByCategory"
                       asp-route-id="@selectedCategoryId"
                       asp-route-priceRange="@value"
                       asp-route-search="@search"
                       class="text-decoration-none">
                        @label
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <h3>Sản phẩm</h3>

        <!-- FORM TÌM KIẾM -->
        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" class="form-control"
                       placeholder="Tìm sản phẩm..." value="@search" />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i>
                </button>
                <a asp-action="ByCategory"
                   asp-route-id="@selectedCategoryId"
                   asp-route-priceRange="@ViewBag.SelectedPriceRange"
                   class="btn btn-outline-secondary">
                    Xóa lọc
                </a>
            </div>
        </form>

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info">@Html.Raw(TempData["Info"])</div>
        }

        <div class="row">
            @if (Model.Any())
            {
                foreach (var p in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@p.HinhAnh" class="card-img-top" style="height:180px; object-fit:cover;" />
                            <div class="card-body text-center">
                                <h6>@p.TenSp</h6>
                                <p class="text-danger fw-bold">@p.Gia.ToString("N0") ₫</p>
                                <a asp-action="Details" asp-route-id="@p.MaSp" class="btn btn-sm btn-outline-primary">Xem</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Không có sản phẩm nào.</p>
            }
        </div>
    </div>
</div>